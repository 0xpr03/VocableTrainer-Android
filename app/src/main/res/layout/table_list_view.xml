<?xml version="1.0" encoding="utf-8"?>
<vocabletrainer.heinecke.aron.vocabletrainer.Activities.lib.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <CheckBox
            android:id="@+id/tblCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="false"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/tableFirstText"
            android:focusable="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_toRightOf="@id/tblCheckBox"
            android:text="First"></TextView>

        <TextView
            android:id="@+id/tableSecondText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:focusable="false"
            android:layout_toRightOf="@id/tableFirstText"
            android:layout_centerVertical="true"
            android:text="Second"></TextView>

        <TextView
            android:id="@+id/tableThirdText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:focusable="false"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="visible"
            android:text="Third"></TextView>
    </LinearLayout>

</vocabletrainer.heinecke.aron.vocabletrainer.Activities.lib.CheckableRelativeLayout>