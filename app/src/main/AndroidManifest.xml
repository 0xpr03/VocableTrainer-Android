<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vocabletrainer.heinecke.aron.vocabletrainer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.TrainerActivity" />
        <activity android:name=".Activities.EditorActivity" />
        <activity android:name=".Activities.MainAcitivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.ListSelector" />
        <activity android:name=".Activities.TrainerSettingsActivity"></activity>
    </application>

</manifest>